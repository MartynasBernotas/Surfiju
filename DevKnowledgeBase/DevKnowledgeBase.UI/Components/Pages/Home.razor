@page "/"

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-12">
    <MudText Typo="Typo.h3" Align="Align.Center">Welcome to Surfiju</MudText>
    <MudText Typo="Typo.subtitle1" Align="Align.Center" Class="mb-4">
        The place where surf lovers meet surf camps around the world.
    </MudText>

    <MudGrid>
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-6" Elevation="4">
                <MudText Typo="Typo.h5">Looking for a surf camp?</MudText>
                <MudText>Search or scroll through verified surf camps in top locations worldwide.</MudText>
                <MudButton Href="camps" Color="Color.Primary" Class="mt-2">Browse Camps</MudButton>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-6" Elevation="4">
                <MudText Typo="Typo.h5">Organizing a surf camp?</MudText>
                <MudText>List your surf camp and start receiving bookings from a global audience.</MudText>
                <MudButton Href="organizers" Color="Color.Secondary" Class="mt-2">List Your Camp</MudButton>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>